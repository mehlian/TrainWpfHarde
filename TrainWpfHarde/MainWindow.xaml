<Window x:Class="TrainWpfHarde.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control = "clr-namespace:TrainWpfHarde" 
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="350" Width="604">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
            <TabItem Header="Buttons" >
                <control:Buttons/>
            </TabItem>
            <TabItem Header="Calendar" >
                <control:Calendars/>
            </TabItem>
            <TabItem Header="CheckBoxes">
                <control:Checkboxes/>
            </TabItem>
            <TabItem Header="ComboBoxes">
                <control:ComboBoxes/>
            </TabItem>
            <TabItem Header="Context Menu">
                <control:ContextMenus/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
