<UserControl x:Class="TrainWpfHarde.ComboBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainWpfHarde"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10">
            <ComboBox Height="20" Width="100" Margin="10" SelectionChanged="OnSelectionChanged">
                <ComboBoxItem Content="Item #1"/>
                <ComboBoxItem Content="Item #2"/>
                <ComboBoxItem Content="Item #3"/>
            </ComboBox>

            <ComboBox IsEditable="True" Height="20" Width="100">
                <ComboBoxItem Content="Item #1"/>
                <ComboBoxItem Content="Item #2"/>
                <ComboBoxItem Content="Item #3"/>
            </ComboBox>
        </StackPanel>
        <StatusBar Grid.Row="1" Height="Auto">
            <StatusBarItem>
                <TextBlock x:Name="Status_Text" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
