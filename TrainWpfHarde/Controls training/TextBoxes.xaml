<UserControl x:Class="TrainWpfHarde.TextBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainWpfHarde"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10">
            <TextBox x:Name="MyTextBox" Height="30" TextChanged="TextBox_TextChanged" 
                     GotFocus="MyTextBox_GotFocus" 
                     LostFocus="MyTextBox_LostFocus" 
                     Text="Wprowadź tekst..."/>
            <TextBox x:Name="MyTextBox1" Height="30" TextChanged="TextBox_TextChanged" 
                     GotFocus="MyTextBox_GotFocus" 
                     LostFocus="MyTextBox_LostFocus" />
        </StackPanel>
        <StatusBar Grid.Row="1" Height="Auto">
            <StatusBarItem>
                <TextBlock x:Name="Status_Text" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
